<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#03a9f4"
    tools:context=".Location2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manali\n Location : Himachal-India\n Price/person : 30,000 INR\nNo of days:20\n Food and Accomodation will be provided"
        android:textAlignment="center"
        android:background="@drawable/myborder"
        android:id="@+id/txt1"
        android:textSize="18sp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dates"
    android:textSize="15sp"
    android:inputType="date"
    android:text="18/06/2018"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter no of Person"
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:textColor="#ff5722"
        android:textSize="15sp"
        android:textAlignment="center" />
    <EditText
        android:id="@+id/noPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:hint="No of Person"
        android:inputType="number"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/noPerson"
    android:textSize="15sp"
    android:id="@+id/txtshow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/noPerson"
        android:textAlignment="center"
        android:textColor="#ff5722"
        android:text="Enter Email:"
        android:id="@+id/txtview2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview2"
        android:textSize="15sp"
        android:hint="Email"
        android:id="@+id/edtem"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/edtem"
        android:text="next"
        android:layout_marginLeft="70dp"
        android:textColor="#ff0000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confbtn"
        android:text="Conform"
        android:layout_below="@+id/edtem"
        android:layout_toRightOf="@+id/ok"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="60dp"
        android:textColor="#ff0000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearid"
            android:layout_marginVertical="50dp">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>